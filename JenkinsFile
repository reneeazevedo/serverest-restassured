pipeline {
    agent any
    stages {
        stage('Build and Test') {
            steps {
                sh 'mvn clean'
            }
        }
        stage('Allure Report') {
            steps {
                sh 'allure generate target/surefire-reports --clean -o target/allure-report'
                allure includeProperties: false, jdk: '', properties: [], reportBuildPolicy: 'ALWAYS', results: [[path: 'target/allure-report']]
        }
    }
  }
}